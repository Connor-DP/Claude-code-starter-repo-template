{
  "contextManagement": {
    "maxTokens": 200000,
    "priorityFiles": [
      "CLAUDE.md",
      "IMPLEMENTATION_PLAN.md",
      "CHECKLIST.md",
      "ai/DEFINITIONS/DONE_DEFINITION.md"
    ],
    "ignoredPaths": [
      "node_modules/**",
      "venv/**",
      "target/**",
      "dist/**",
      "build/**",
      "coverage/**",
      ".cache/**",
      "*.log",
      "*.tmp",
      "*.lock",
      "package-lock.json",
      "yarn.lock",
      "Cargo.lock",
      "ai/TASKS/archive/**"
    ]
  },
  "environment": {
    "language": "TypeScript",
    "runtime": "Node.js",
    "packageManager": "npm",
    "testFramework": "Jest"
  },
  "commands": {
    "test": "npm test",
    "lint": "npm run lint",
    "typecheck": "npm run typecheck",
    "build": "npm run build",
    "format": "npm run format:check"
  },
  "verification": {
    "requiredCoverage": null,
    "blockOnTodo": false,
    "blockOnConsole": true,
    "srcDir": "src"
  },
  "hints": {
    "alwaysReadFirst": [
      "CLAUDE.md",
      "ai/DEFINITIONS/DONE_DEFINITION.md"
    ],
    "readOnceAtTaskStart": [
      "docs/TECH_SPEC.md",
      "docs/ARCHITECTURE.md",
      "docs/ANTI_PATTERNS.md",
      "docs/PRD.md",
      "ai/CONTEXT.md",
      "tests/README.md"
    ],
    "beforeArchiving": [
      "Run src/scripts/verify-task.sh",
      "Check all CHECKLIST.md items complete",
      "Create ADR if architectural decisions made",
      "Update IMPLEMENTATION_PLAN.md status to DONE"
    ]
  },
  "scopeControl": {
    "enforceOneTaskAtATime": true,
    "requireVerificationBeforeDone": true,
    "blockMultipleActiveTasks": true,
    "activeTaskLocation": "root",
    "archiveLocation": "ai/TASKS/archive/"
  },
  "tokenOptimization": {
    "note": "Priority files are sent on every turn. Other docs should be read once at task start and kept in conversation history."
  },
  "examples": {
    "note": "Example configurations for different stacks",
    "python": {
      "commands": {
        "test": "pytest",
        "lint": "flake8 .",
        "typecheck": "mypy .",
        "build": "python -m build",
        "format": "black --check ."
      },
      "verification": {
        "srcDir": "src"
      }
    },
    "go": {
      "commands": {
        "test": "go test ./...",
        "lint": "golangci-lint run",
        "typecheck": "go vet ./...",
        "build": "go build ./...",
        "format": "gofmt -l ."
      },
      "verification": {
        "srcDir": "."
      }
    },
    "rust": {
      "commands": {
        "test": "cargo test",
        "lint": "cargo clippy",
        "typecheck": "cargo check",
        "build": "cargo build",
        "format": "cargo fmt -- --check"
      },
      "verification": {
        "srcDir": "src"
      }
    }
  }
}
